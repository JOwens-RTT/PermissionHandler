<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestApp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCheckBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnCheckBT_onClick"
            android:text="Check Bluetooth" />

        <Button
            android:id="@+id/btnCheckCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnCheckCourse_onClick"
            android:text="Check Course Location" />

        <Button
            android:id="@+id/btnCheckFine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnCheckFine_onClick"
            android:text="Check Fine Location" />

    </LinearLayout>
</RelativeLayout>